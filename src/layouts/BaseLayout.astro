---
import Navbar from "../components/common/Navbar.astro";
import HeroSection from "../components/common/HeroSection.astro";
import ProjectList from "../components/project/ProjectList.astro";
import ChallengeList from "../components/challenge/ChallengeList.astro";
import Footer from "../components/common/Footer.astro";

const { lang, t } = Astro.props;
---

<html lang={lang}>
    <head>
        <script is:inline>
            if (
                localStorage.getItem("theme") === "dark" ||
                (!("theme" in localStorage) &&
                    window.matchMedia("(prefers-color-scheme: dark)").matches)
            ) {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }
        </script>

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content={t("head.description") ?? "Personal Portfolio"}
        />
        <meta name="theme-color" content="#ffffff" />
        <meta property="og:title" content={t("head.title")} />
        <meta property="og:description" content={t("head.description")} />
        <meta property="og:image" content="/favicon.svg" />
        <meta property="og:type" content="website" />
        <meta property="og:locale" content={lang} />
        <meta property="og:url" content="https://tusitio.com" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{t("head.title")}</title>
    </head>
    <body
        class="font-sans text-gray-900 bg-white dark:bg-gray-900 dark:text-white transition-colors duration-300"
    >
        <Navbar lang={lang} t={t} />
        <main class="px-40 py-16">
            <section id="hero" class="section-full">
                <HeroSection lang={lang} t={t} />
            </section>

            <section id="projects" class="section-full">
                <ProjectList lang={lang} />
            </section>

            <section id="challenges" class="section-full">
                <ChallengeList lang={lang} />
            </section>
        </main>
        <Footer lang={lang} t={t} />
    </body>
</html>
