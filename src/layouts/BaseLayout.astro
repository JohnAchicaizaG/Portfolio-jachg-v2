---
import AnimatedBackground from "../components/common/AnimatedBackground.astro";
import "aos/dist/aos.css";
import { iconRegistry } from "../assets/data/iconRegistry";

const icons = [
    "nest",
    "ts",
    "angular",
    "astro",
    "html",
    "css",
    "js",
    "tailwind",
    "nodejs",
    "postgres",
    "react",
    "springboot",
    "sqlserver",
    "vue",
    "git",
];
const { lang, t } = Astro.props;
---

<html lang={lang}>
    <head>
        <script is:inline>
            if (
                localStorage.getItem("theme") === "dark" ||
                (!("theme" in localStorage) &&
                    window.matchMedia("(prefers-color-scheme: dark)").matches)
            ) {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }
        </script>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content={t("head.description") ?? "Personal Portfolio"}
        />
        <meta name="theme-color" content="#ffffff" />
        <meta property="og:title" content={t("head.title")} />
        <meta property="og:description" content={t("head.description")} />
        <meta property="og:image" content="/favicon.svg" />
        <meta property="og:type" content="website" />
        <meta property="og:locale" content={lang} />
        <meta property="og:url" content="https://tusitio.com" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <title>{t("head.title")}</title>
    </head>
    <body class="relative min-h-screen scroll-smooth">
        <!-- Fondo animado con SVGs -->
        <AnimatedBackground icons={icons} />

        <slot />

        <script>
            import AOS from "aos";
            AOS.init();
        </script>
    </body>
</html>
